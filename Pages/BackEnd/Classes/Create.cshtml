@page
@using Microsoft.AspNetCore.Authorization;
@attribute [Authorize(Policy = "经理或管理员")]
@model HotelManagementSystem.Pages.ClassModel
@{
    ViewData["Title"] = "创建房间类型";
}
<h1>@ViewData["Title"]</h1>

<p>请在这里创建房间类型。</p>

<div>
    <form method="post">
        <div class="form-group mt-3 mb-3">
            <label asp-for="NewClass.class_name" class="control-label">名称</label>
            <input asp-for="NewClass.class_name" class="form-control" />
            <span asp-validation-for="NewClass.class_name" class="text-danger"></span>
        </div>
        <div class="form-group mt-3 mb-3">
            <label asp-for="NewClass.class_capacity" class="control-label">最大人数</label>
            <input asp-for="NewClass.class_capacity" class="form-control" />
            <span asp-validation-for="NewClass.class_capacity" class="text-danger"></span>
        </div>
        <div class="form-group mt-3 mb-3">
            <label asp-for="NewClass.class_price" class="control-label">价格</label>
            <input asp-for="NewClass.class_price" class="form-control" />
            <span asp-validation-for="NewClass.class_price" class="text-danger"></span>
        </div>
        <div class="form-group mt-3 mb-3">
            <input type="submit" value="创建" class="btn btn-primary" />
        </div>
        @if (TempData["SuccessMessage"] != null)
        {
            <div id="SuccessMessage" class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script>
            $(document).ready(function () {
                // 如果#successMessage元素存在，即有消息需要显示
                if ($("#SuccessMessage").length) {
                    // 设置5秒后隐藏消息
                    setTimeout(function () {
                        $("#SuccessMessage").fadeOut("slow");
                    }, 5000); // 5000毫秒 = 5秒
                }
            });
        </script>
    </form>
</div>