@page
@model HotelManagementSystem.Pages.ClientSearchModel

<h1>搜索订单</h1>

<p>请在这里搜索订单。</p>

<div>
    <form method="post">
        <div class="form-group mt-3 mb-3">
            <label for="ClientName" class="control-label">顾客姓名</label>
            <input asp-for="ClientName" class="form-control" />
            <span asp-validation-for="ClientName" class="text-danger"></span>
        </div>
        <div class="form-group mt-3 mb-3">
            <input type="submit" value="搜索" class="btn btn-primary" />
        </div>
    </form>
</div>

@if (Model.Clients?.Any() == true)
{
    <div>搜索结果：</div>
    <div>@await Html.PartialAsync("/Pages/FrontEnd/ClientsTable.cshtml")</div>
}
else if (TempData["FirstTime"] != null)
{
    <div>没有找到匹配的结果。</div>
}